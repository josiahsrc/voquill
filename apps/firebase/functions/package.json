{
  "name": "@voquill/firebase",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=cjs --outdir=lib --tsconfig=tsconfig.build.json",
    "check-types": "npm run type-check",
    "dev": "firebase emulators:start --config ../firebase.json",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:unit && npm run test:component && npm run test:integration",
    "test:component": "jest test/component/* --detectOpenHandles",
    "test:integration": "jest test/integration/* --detectOpenHandles",
    "test:unit": "jest src/*",
    "type-check": "tsc --noEmit",
    "watch": "nodemon --exec \"npm run build\""
  },
  "engines": {
    "node": ">=20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@firemix/mixed": "^0.1.3",
    "@repo/functions": "*",
    "@repo/types": "*",
    "dayjs": "^1.11.13",
    "env-var": "^7.4.1",
    "firebase": "^11.1.0",
    "firebase-admin": "^13.0.2",
    "firebase-functions": "^6.4.0",
    "googleapis": "^150.0.1",
    "groq-sdk": "^0.29.0",
    "immer": "^10.1.1",
    "loops": "^5.0.1",
    "nanoid": "^3.3.7",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.3",
    "stripe": "^18.2.1",
    "timezone": "^1.0.23",
    "utc": "^0.1.0",
    "uuid": "^8.3.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.3",
    "@types/sharp": "^0.31.1",
    "@types/stripe": "^8.0.416",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.34.0",
    "firebase-tools": "^13.34.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "typescript": "5.9.2"
  }
}
