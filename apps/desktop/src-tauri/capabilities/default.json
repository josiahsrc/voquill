{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:event:default",
    "autostart:default",
    "opener:default",
    "updater:default",
    "process:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/rust-transcription-cpu",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/rust-transcription-gpu",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "shell:allow-kill",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost"
        },
        {
          "url": "http://localhost/**"
        },
        {
          "url": "http://localhost:*"
        },
        {
          "url": "http://localhost:*/**"
        },
        {
          "url": "http://127.0.0.1"
        },
        {
          "url": "http://127.0.0.1/**"
        },
        {
          "url": "http://127.0.0.1:*"
        },
        {
          "url": "http://127.0.0.1:*/**"
        },
        {
          "url": "http://*:*"
        },
        {
          "url": "http://*:*/**"
        },
        {
          "url": "https://*"
        },
        {
          "url": "https://*/**"
        }
      ]
    }
  ]
}