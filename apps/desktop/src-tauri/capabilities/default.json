{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "autostart:default",
    "opener:default",
    "updater:default",
    "process:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://*:*" },
        { "url": "http://*:*/**" },
        { "url": "https://*" },
        { "url": "https://*/**" }
      ]
    }
  ]
}
