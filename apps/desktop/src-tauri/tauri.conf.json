{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop",
  "version": "0.1.0",
  "identifier": "com.voquill.desktop",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "desktop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/models/ggml-base.en.bin",
      "resources/models/tinyllama-1.1b-chat-v1.0.Q4_K_M.gguf"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:voquill.db"]
    },
    "updater": {
      "endpoints": [
        "https://github.com/josiahsrc/voquill/releases/latest/download/latest.json"
      ],
      "pubkey": "__UPDATER_PUBLIC_KEY__"
    }
  }
}
