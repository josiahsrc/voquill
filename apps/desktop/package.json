{
  "name": "desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/select-platform-dev.mjs",
    "dev:mac": "cross-env TAURI_PLATFORM=macos npm run dev:tauri",
    "dev:windows": "cross-env TAURI_PLATFORM=windows npm run dev:tauri",
    "dev:windows:gpu": "cross-env TAURI_PLATFORM=windows tauri dev --config src-tauri/tauri.local.conf.json -- --features windows-gpu",
    "dev:linux": "cross-env TAURI_PLATFORM=linux npm run dev:tauri",
    "dev:linux:gpu": "cross-env TAURI_PLATFORM=linux npm run dev:tauri:gpu",
    "dev:tauri": "tauri dev --config src-tauri/tauri.local.conf.json",
    "dev:tauri:gpu": "tauri dev --config src-tauri/tauri.local.conf.json -- --no-default-features --features linux-gpu",
    "dev:vite": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test:webdriver": "wdio run webdriver/wdio.conf.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@firemix/client": "^0.1.5",
    "@firemix/core": "^0.1.5",
    "@fontsource/roboto": "^5.2.5",
    "@mui/icons-material": "^7.1.0",
    "@mui/lab": "^7.0.0-beta.14",
    "@mui/material": "^7.1.0",
    "@repo/functions": "*",
    "@repo/types": "*",
    "@repo/utilities": "*",
    "@repo/voice-ai": "*",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "^2.3.1",
    "@tauri-apps/plugin-process": "^2.3.0",
    "@tauri-apps/plugin-sql": "^2",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "chroma-js": "^3.1.2",
    "dayjs": "^1.11.13",
    "firebase": "^11.10.0",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.29.0",
    "react-virtuoso": "^4.12.8",
    "rxjs": "^7.8.2",
    "vite-plugin-svgr": "^4.5.0",
    "zustand": "^4.5.2",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.4.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@wdio/cli": "^9.20.0",
    "@wdio/globals": "^9.17.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "chromedriver": "^141.0.0",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
}