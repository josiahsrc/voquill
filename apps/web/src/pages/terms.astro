---
import BaseLayout from "../layouts/BaseLayout.astro";
import SiteFooter from "../components/site-footer";
import SiteHeader from "../components/site-header";
import layoutStyles from "../styles/page.module.css";
import styles from "../styles/legal.module.css";
import { getMarkdownContent } from "../lib/markdown";

const content = await getMarkdownContent("terms");
---

<BaseLayout
  title="Terms of Service | Voquill"
  description="Read the Voquill Terms of Service to understand your rights and responsibilities when using our AI dictation tools."
>
  <div class={layoutStyles.page}>
    <SiteHeader client:load />
    <main class={styles.legalMain}>
      <article class={styles.legalContent} set:html={content} />
    </main>
    <SiteFooter client:load />
  </div>
</BaseLayout>

