<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <FrameLayout
        android:id="@+id/keyboard_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="@drawable/keyboard_background_light"
        android:elevation="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="9dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <FrameLayout
            android:id="@+id/pill_button"
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/pill_background"
            android:clickable="true"
            android:clipToOutline="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <FrameLayout
                android:id="@+id/waveform_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/pill_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="tap to dictate"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:textSize="15sp"
                android:textStyle="normal" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/globe_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Switch keyboard"
            android:scaleType="centerInside"
            android:src="@drawable/ic_globe" />
    </FrameLayout>
</FrameLayout>
